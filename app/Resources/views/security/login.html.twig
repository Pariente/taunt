{% extends 'base.html.twig' %}

{% block title %}
  Taunt.io - Se connecter
{% endblock %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div id="wrapper">
  <div id="container">
    <h3 class="text-center">Parlez ami et entrez.</h3>
  </div>
  <form class="login-form" action="{{ path('login_check') }}" method="post">
      <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Utilisateur"/>
      <input type="password" id="password" name="_password" placeholder="Mot de passe"/>

      {#
          If you want to control the URL the user
          is redirected to on success (more details below)
          <input type="hidden" name="_target_path" value="/account" />
      #}

      <button type="submit" id="form_submit">Connexion</button>
  </form>
</div>
{% endblock %}
