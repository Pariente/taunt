{% extends 'base.html.twig' %}

{% block title %}
  Taunt.io - Nouveau Taunt
{% endblock %}

{% block body %}
<div id="wrapper">
	<div id="container">
    <h3 class="text-center">Publier un nouveau Taunt</h3>
  </div>

		<form id="newquote" action="{{ path('new') }}" method="post" {{ form_enctype(form) }}>
			{{ form_start(form) }}
			{{ form_row(form.title) }}
			{{ form_row(form.file) }}
			{{ form_rest(form) }}
			{{ form_end(form) }}
		</form>
</div>
</div>

{% endblock %}
